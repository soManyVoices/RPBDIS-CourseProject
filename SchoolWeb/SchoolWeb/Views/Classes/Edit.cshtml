@model Class

@{
    ViewData["Title"] = "Редактировать";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center mb-4" style="color: #fff;">Редактировать</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm" style="background-color: #333; border-color: #444;">
                <div class="card-body" style="background-color: #333;">
                    <h4 class="card-title text-center mb-4" style="color: #fff;">Класс</h4>
                    <form asp-action="Edit">
                        <input type="hidden" asp-for="ClassId">
                        <div class="form-group">
                            <label asp-for="Name" class="control-label" style="color: #fff;"></label>
                            <input asp-for="Name" class="form-control" style="background-color: #555; color: #fff; border: 1px solid #444;" />
                        </div>
                        <div class="form-group">
                            <label asp-for="ClassTeacher" class="control-label" style="color: #fff;"></label>
                            <input asp-for="ClassTeacher" class="form-control" style="background-color: #555; color: #fff; border: 1px solid #444;" />
                        </div>
                        <div class="form-group">
                            <label asp-for="ClassTypeId" class="control-label" style="color: #fff;"></label>
                            <select asp-for="ClassTypeId" class="form-control" style="background-color: #555; color: #fff; border: 1px solid #444;" asp-items="ViewBag.ClassTypeId"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="StudentCount" class="control-label" style="color: #fff;"></label>
                            <input asp-for="StudentCount" class="form-control" type="number" step="0.01" style="background-color: #555; color: #fff; border: 1px solid #444;" />
                            <span asp-validation-for="StudentCount" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="YearCreated" class="control-label" style="color: #fff;"></label>
                            <input asp-for="YearCreated" class="form-control" type="number" step="0.01" style="background-color: #555; color: #fff; border: 1px solid #444;" />
                            <span asp-validation-for="YearCreated" class="text-danger"></span>
                        </div>
                        <div class="form-group text-center mt-4">
                            <input type="submit" value="Сохранить" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-link" style="color: #fff;">Вернуться к списку</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
